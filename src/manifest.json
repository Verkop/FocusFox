{
  "name": "Focus Fox",
  "description": "Focus Fox helps you stay focused on the tasks you want to focus on by blocking distracting sites.",
  "version": "0.1.0",
  "manifest_version": 3,
  "permissions": ["tabs"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["https://*.facebook.com/*"],
      "js": ["content-scripts/js/block-page.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["content-scripts/css/*"],
      "matches": ["<all_urls>"],
      "use_dynamic_url": true
    },
    {
      "resources": ["content-scripts/html/*"],
      "matches": ["<all_urls>"],
      "use_dynamic_url": true
    },
    {
      "resources": ["assets/*"],
      "matches": ["<all_urls>"],
      "use_dynamic_url": true
    }
  ]
}
